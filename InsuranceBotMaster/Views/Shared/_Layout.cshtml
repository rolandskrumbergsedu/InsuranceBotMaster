<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Insurance Bot Master</title>
    <link href="https://cdn.botframework.com/botframework-webchat/latest/botchat.css" rel="stylesheet" />
</head>
<body>

    <div id="bot"></div>

    <script src="https://cdn.botframework.com/botframework-webchat/latest/botchat.js"></script>
    <script src="https://unpkg.com/botframework-directlinejs/directLine.js"></script>
    <script>
        BotChat.App({
            directLine: {
                secret: '@System.Web.Configuration.WebConfigurationManager.AppSettings["BotSecret"]' },
            user: {
                id: '@System.Web.Configuration.WebConfigurationManager.AppSettings["UserId"]' },
            bot: { id: '@System.Web.Configuration.WebConfigurationManager.AppSettings["BotId"]' },
            resize: 'detect'
        },
            document.getElementById("bot"));
    </script>

    @RenderBody()
</body>
</html>